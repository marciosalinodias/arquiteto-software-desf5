        </mxCell>
        
        <!-- Step 5: Service -->
        <mxCell id="step5" value="&lt;b&gt;5. SERVICE (LÓGICA DE NEGÓCIO)&lt;/b&gt;&lt;br&gt;ClienteService.createCliente(data) {&lt;br&gt;  if (await this.emailExists(data.email)) {&lt;br&gt;    throw new AppError('Email já cadastrado');&lt;br&gt;  }&lt;br&gt;  return await clienteModel.create(data);&lt;br&gt;}" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#d5e8d4;strokeColor=#82b366;fontSize=9;" vertex="1" parent="1">
          <mxGeometry x="240" y="240" width="160" height="120" as="geometry" />
        </mxCell>
        
        <!-- Step 6: Model -->
        <mxCell id="step6" value="&lt;b&gt;6. MODEL (ACESSO A DADOS)&lt;/b&gt;&lt;br&gt;ClienteModel.create(data) {&lt;br&gt;  return await prisma.cliente.create({&lt;br&gt;    data: {&lt;br&gt;      nome: data.nome,&lt;br&gt;      email: data.email,&lt;br&gt;      telefone: data.telefone,&lt;br&gt;      endereco: data.endereco&lt;br&gt;    }&lt;br&gt;  });&lt;br&gt;}" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#e1d5e7;strokeColor=#9673a6;fontSize=9;" vertex="1" parent="1">
