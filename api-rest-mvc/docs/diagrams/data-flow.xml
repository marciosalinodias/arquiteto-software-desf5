        <!-- Step 4: Controller -->
        <mxCell id="step4" value="&lt;b&gt;4. CONTROLLER&lt;/b&gt;&lt;br&gt;ClienteController.create(req, res) {&lt;br&gt;  const result = await&lt;br&gt;    clienteService.createCliente(req.body);&lt;br&gt;  res.status(201).json(result);&lt;br&gt;}" style="rounded=1;whiteSpace=wrap;html=1;fillColor=#dae8fc;strokeColor=#6c8ebf;fontSize=9;" vertex="1" parent="1">
